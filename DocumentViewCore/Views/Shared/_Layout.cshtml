@{ var currentFolder = ViewBag.CurrentFolder ?? "";
                var folders = ViewBag.Folders as List<string>; }

<!DOCTYPE html>
<html>
<head>
    <title>DocumentsViewCore</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.0/css/bootstrap.min.css" />
</head>
<body>
    <div class="d-flex">
        <div class="bg-light p-3" style="width: 250px;">
            <h4><a href="@Url.Action("Index", "Home")">Home</a></h4>
            <ul class="list-group">
                @foreach (var folder in folders)
                {
                <li class="list-group-item">
                    @*<a href="/@Url.Action("Index", "Home", new { folderName = folder })">@folder</a>*@
                    <a href="@Url.Action("ListFiles", "Home", new { folderName = folder })">@folder</a>
                </li>}
            </ul>
        </div>

        <div class="p-3 w-100">
            @RenderBody()
        </div>
    </div>
</body>
</html>