@{
    ViewData["Title"] = "View File";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="container mt-5">
        <h1>Xem File: @ViewBag.FileName</h1>

        @if (ViewBag.FileType == "pdf")
        {
            <iframe src="@Url.Action("ViewFile", "Files", new { folderName = ViewBag.CurrentFolder, fileName = ViewBag.FileName })" width="100%" height="600"></iframe>
        }
        else if (ViewBag.FileType == "image")
        {
            <img src="@Url.Action("ViewFile", "Files", new { folderName = ViewBag.CurrentFolder, fileName = ViewBag.FileName })" class="img-fluid" />
        }
        else if (ViewBag.FileType == "video")
        {
            <video width="100%" height="600" controls>
                <source src="@Url.Action("ViewFile", "Files", new { folderName = ViewBag.CurrentFolder, fileName = ViewBag.FileName })" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        }
    </div>

</body>
</html>
