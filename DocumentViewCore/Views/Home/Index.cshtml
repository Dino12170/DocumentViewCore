@{
    ViewData["Title"] = "Google Drive Clone - Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .folder-card {
            cursor: pointer;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 10px;
            text-align: center;
        }

            .folder-card:hover {
                background-color: #f5f5f5;
            }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h1>List Folder</h1>

        <div class="row">
            @foreach (var folder in ViewBag.Folders)
            {
                <div class="col-md-3 mb-4">
                    <div class="folder-card">
                        <h4>@folder</h4>
                        <a href="@Url.Action("ListFiles", "Home", new { folderName = folder })" class="btn btn-primary btn-sm">View</a>
                    </div>
                </div>
            }
        </div>

        <hr>

